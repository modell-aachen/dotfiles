qore-install() {
    local user=www-data

    qwiki-files() {
    find $CORE_REPO/{lib,LICENSE,locale,README.md,robots.txt,tools,bin} \
        -type f \
        | sed "s#^$CORE_REPO/##"
    }

    qore-link() {
        local file="$1"
        local src="$CORE_REPO/$file"
        local dest="$FOSWIKI_ROOT/$file"

        if [ -L "$dest" ]; then
            return
        fi

        echo "$file"
        if [ ! -f "$dest"  ]; then
            sudo -u $user mkdir -p $(dirname "$dest")
            sudo -u $user cp -r "$src" "$dest"
        fi
        sudo -u $user ln -sf "$src" "$dest"
    }

    qore-link-dirs() {
        local dirs=(cron data pub solr templates bootstrap)

        for dir in ${dirs[@]}; do
            local src="$CORE_REPO/$dir"
            local dest="$FOSWIKI_ROOT/$dir"

            echo "$dest"

            sudo rm -r "$dest"
            sudo -u $user ln -s "$src" "$dest"
        done
    }

    sudo find -L $FOSWIKI_ROOT -type l -delete
    qore-link-dirs

    local files="$(qwiki-files)"
    OIFS="$IFS"
    IFS=$'\n'
    for file in $files; do
        qore-link "$file"
    done
    IFS="$OIFS"

    sudo systemctl restart qwikiRestart
    echo "Success!"
}
